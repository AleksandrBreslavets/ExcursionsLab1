@model ExcursionsInfrastructure.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Реєстрація";
}

<h1>Реєстрація</h1>

<div class="row" style="margin-top:30px;">
    <div class="col-md-4">
        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-bottom:16px;">
                <label asp-for="Email" class="control-label" style="margin-bottom:8px;"></label><br />
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:16px;">
                <label asp-for="Name" class="control-label" style="margin-bottom:8px;"></label><br />
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:16px;">
                <label asp-for="PhoneNumber" class="control-label" style="margin-bottom:8px;"></label><br />
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:16px;">
                <label asp-for="Password" class="control-label" style="margin-bottom:8px;"></label><br />
                <input type="password" asp-for="Password" class="form-control" id="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <button class="show-hide-button" type="button" onclick="togglePasswordVisibility('password')">Показати/Сховати</button>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm" class="control-label" style="margin-bottom:8px;"></label><br />
                <input asp-for="PasswordConfirm" class="form-control" id="confPassword" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                <button class="show-hide-button" type="button" onclick="togglePasswordVisibility('confPassword')">Показати/Сховати</button>
            </div>
            <div class="form-group cat-details-btns filter-btn-box">
                <input class="btn btn-outline-success" type="submit" value="Реєстрація" />
            </div>
        </form>
    </div>
</div>

<script>
    function togglePasswordVisibility(inputId) {
        var input = document.getElementById(inputId);
        if (input.type === "password") {
            input.type = "text";
        } else {
            input.type = "password";
        }
    }
</script>