@model ExcursionsInfrastructure.ViewModel.UpdateUserViewModel

@{
    ViewData["Title"] = "Редагування профілю";
}

<h1>Редагування профілю</h1>
<hr />

<div class="row" style="margin-top:30px;">
    <div class="col-md-4">
        <form asp-action="UpdateUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-bottom:16px;">
                <label asp-for="Name" class="control-label" style="margin-bottom:8px;"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:16px;">
                <label asp-for="Email" class="control-label" style="margin-bottom:8px;"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label" style="margin-bottom:8px;"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group cat-details-btns filter-btn-box">
                <input class="btn btn-outline-success" type="submit" value="Зберегти" />
                <a class="btn btn-outline-info" asp-action="Details">До особистого кабінету</a>
            </div>
        </form>
    </div>
</div>

