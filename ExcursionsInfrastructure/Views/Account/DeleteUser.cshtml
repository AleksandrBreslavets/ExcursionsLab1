@model ExcursionsDomain.Model.Visitor

@{
    ViewData["Title"] = "Видалення користувача";
}

<h3>Чи впевнені ви, що хочете видалити користувача: @Html.DisplayFor(model => model.Name)</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>

    <form asp-controller="Account" asp-action="DeleteUser" method="post" class="form-group cat-details-btns filter-btn-box">
        <input type="hidden" name="userName" value="@Model.Email" />
        <input class="btn btn-outline-danger" type="submit" value="Видалити" />
        <a class="btn btn-outline-info" asp-controller="Home" asp-action="Index">На головну</a>
    </form>
</div>

