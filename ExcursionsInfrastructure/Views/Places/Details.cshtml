@model ExcursionsDomain.Model.Place

@{
    ViewData["Title"] = @Model.Name;
}

<h1 class="display-4">@Model.Name</h1>
<hr />

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Adress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CoordinateX)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CoordinateX)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CoordinateY)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CoordinateY)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City.Name)
        </dd>
    </dl>
</div>
<div class="cat-details-btns">
    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model?.Id">Редагувати</a>
    <a class="btn btn-outline-info" asp-action="Index">До всіх місць проведення</a>
</div>

