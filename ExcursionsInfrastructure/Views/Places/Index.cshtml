@model IEnumerable<ExcursionsDomain.Model.Place>

@{
    ViewData["Title"] = "Місця проведення";
}

<h1>Місця проведення</h1>

<p>
    <a asp-action="Create">Додати місце проведення</a>
</p>
@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CoordinateX)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CoordinateY)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CoordinateX)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CoordinateY)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Докладніше</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@if (!Model.Any())
{
    <p>Немає місць проведення.</p>
}