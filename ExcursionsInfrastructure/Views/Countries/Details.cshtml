@model ExcursionsDomain.Model.Country
@{
    ViewData["Title"] = @Model.Name;
}

<h1 class="display-4">@Model.Name</h1>
<hr />
@if (Model.Cities.Any())
{
    <div>
        <h4>Міста цієї країни:</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Місто
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cities)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td>
                            @Html.ActionLink("Редагувати", "Edit", "Cities", new { id = item.Id }) |
                            @Html.ActionLink("Докладніше", "Details", "Cities", new { id = item.Id }) |
                            @Html.ActionLink("Видалити", "Delete", "Cities", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>       
}

@if (!Model.Cities.Any())
{
    <p>Жодне місто не належить до цієї країни.</p>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редагувати</a> |
    <a asp-action="Index">До всіх країн</a>
</div>
