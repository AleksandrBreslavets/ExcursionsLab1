@model ExcursionsDomain.Model.Category

@{
    ViewData["Title"] = "Створення";
}

<h1>Створення категорії</h1>

<hr />
<div class="row" style="margin-top:30px;">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label" style="margin-bottom:8px;"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group cat-details-btns filter-btn-box">
                <input class="btn btn-outline-success" type="submit" value="Створити"/>
                <a class="btn btn-outline-info" asp-action="Index">До всіх категорій</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
